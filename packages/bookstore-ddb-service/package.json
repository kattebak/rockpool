	},
	"devDependencies": {
		"@bookstore/ddb-entities": "*",
		"@bookstore/bookstore-types": "*",
		"electrodb": "^3.4.7",
		"openapi-backend": "^5.11.0",
		"tsx": "^4.19.3"
	},
	"peerDependencies": {
		"@aws-sdk/client-dynamodb": "^3.x",
		"@aws-sdk/lib-dynamodb": "^3.x"
	}
}
