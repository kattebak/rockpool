{
	"name": "@bookstore/ddb-service",
	"version": "1.0.0",
	"description": "Wrapper around DynamoDB and ElectroDB for the Bookstore API",
	"license": "UNLICENSED",
	"author": "",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"pretest": "node --import tsx --env-file .env.test ../../npm-scripts/setup-dynamodb-local.ts -s ../../dynamodb/table.schema.json",
		"test": "node --env-file .env.test --import tsx --test src/**/*.test.ts",
		"test:typecheck": "tsc --noEmit",
