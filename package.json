{
	"name": "tidepool",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"preinstall": "make && echo 'Build complete'",
		"test": "npm run test --workspaces --if-present",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"fix": "biome check --fix . && tsp format typespec/**/*.tsp",
		"check": "tsgo --noEmit",
		"check:tsc": "tsc --noEmit",
		"build:image": "make images/tidepool-workspace",
		"mvp:build-image": "npm-scripts/mvp-build-image.sh",
		"mvp:start-vm": "npm-scripts/mvp-start-vm.sh",
		"mvp:setup-vm": "npm-scripts/mvp-setup-vm.sh",
		"mvp:verify": "npm-scripts/mvp-verify.sh",
		"mvp:caddy:bootstrap": "npm-scripts/caddy-bootstrap.sh",
		"mvp:caddy:add-route": "npm-scripts/caddy-add-workspace-route.sh",
		"mvp:caddy:remove-route": "npm-scripts/caddy-remove-workspace-route.sh",
		"chrome:debug": "npm-scripts/chrome-debug.sh",
		"dev": "pm2 delete all --silent; pm2 start ecosystem.config.cjs && pm2 logs",
		"start": "npm run build -w packages/client && pm2 delete all --silent; RUNTIME=tart pm2 start ecosystem.caddy.config.cjs && pm2 logs",
		"stop": "pm2 delete all",
		"dev:caddy": "npm run build -w packages/client && pm2 delete all --silent; pm2 start ecosystem.caddy.config.cjs && pm2 logs",
		"dev:stop": "pm2 delete all",
		"dev:status": "pm2 status",
		"dev:logs": "pm2 logs",
		"chrome:cdp": "node --experimental-websocket npm-scripts/chrome-cdp.mjs"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@kattebak/openapi-generator-ts": "^1.0.0",
		"@kattebak/typespec-drizzle-orm-generator": "^3.0.2",
		"@kattebak/typespec-enum-emitter": "^1.2.2",
		"@kattebak/typespec-zod-emitter": "^1.2.2",
		"@tdpl/db-schema": "file:build/db-schema",
		"@tdpl/enums": "file:build/enums",
		"@tdpl/openapi": "file:build/openapi",
		"@tdpl/sdk": "file:build/sdk",
		"@tdpl/validators": "file:build/validators",
		"@typescript/native-preview": "^7.0.0-dev.20260221.1",
		"@typespec/compiler": "^1.9.0",
		"@typespec/http": "^1.9.0",
		"@typespec/openapi3": "^1.9.0",
		"@typespec/rest": "^0.79.0",
		"drizzle-orm": "1.0.0-beta.15-859cf75",
		"pm2": "^6.0.14",
		"short-uuid": "^5.2.0",
		"tsx": "^4.19.3",
		"typescript": "*"
	},
	"overrides": {
		"drizzle-orm": "1.0.0-beta.15-859cf75"
	},
	"engines": {
		"node": ">=22.0.0"
	}
}
