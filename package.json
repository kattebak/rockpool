{
	"name": "tidepool",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*",
		"typespec",
		"build/*"
	],
	"scripts": {
		"test": "echo \"No tests configured yet\"",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"fix": "biome check --fix . && tsp format typespec/**/*.tsp",
		"check": "tsgo --noEmit",
		"check:tsc": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@typescript/native-preview": "^7.0.0-dev.20260221.1",
		"tsx": "^4.19.3",
		"typescript": "*"
	},
	"engines": {
		"node": ">=22.0.0"
	}
}
